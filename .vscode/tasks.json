{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 활성 파일 빌드",
			"command": "C:\\Program Files\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"${fileDirname}\\show\\*.cpp",
				"${fileDirname}\\search\\*.cpp",
				"${fileDirname}\\create\\*.cpp",
				"${fileDirname}\\update\\*.cpp",
				"${fileDirname}\\delete\\*.cpp",
				"${fileDirname}\\delete_all\\*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-I",
				"${fileDirname}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "컴파일러: \"C:\\Program Files\\mingw64\\bin\\g++.exe\""
		}
	]
}